pipeline {
  agent any

  stages {
    stage('Checkout Code') {
      steps {
        git branch: 'main', url: 'https://github.com/tirupdev/reactjs_ec2-jenkins.git'
      }
    }

    stage('Install Dependencies') {
      steps {
        sh 'npm install'
      }
    }

    stage('Build React App') {
      steps {
        sh 'npm run build'
      }
    }

    stage('Copy Files to EC2') {
      steps {
        sh '''
          # Archive build and Dockerfile
          tar -czf react-deploy.tar.gz build Dockerfile

          # Copy archive to EC2
          scp -i /var/lib/jenkins/.ssh/3july.pem -o StrictHostKeyChecking=no react-deploy.tar.gz ubuntu@98.130.85.211:/home/ubuntu/
        '''
      }
    }

    stage('Build and Run Docker Container on EC2') {
      steps {
        sh '''
          ssh -i /var/lib/jenkins/.ssh/3july.pem -o StrictHostKeyChecking=no ubuntu@98.130.85.211 "
            cd /home/ubuntu &&
            rm -rf build Dockerfile react-deploy.tar.gz &&
            tar -xzf react-deploy.tar.gz &&

            docker stop my-react-app || true &&
            docker rm my-react-app || true &&

            docker build -t my-react-nginx . &&
            docker run -d --name my-react-app -p 8086:80 my-react-nginx
          "
        '''
      }
    }
  }
}