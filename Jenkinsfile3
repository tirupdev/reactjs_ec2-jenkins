pipeline {
  agent any

  stages {
    stage('Checkout Code') {
      steps {
        git branch: 'main', url: 'https://github.com/tirupdev/reactjs_ec2-jenkins.git'
      }
    }

    stage('Install Dependencies') {
      steps {
        sh 'npm install'
      }
    }

    stage('Build React App') {
      steps {
        sh 'npm run build'
      }
    }

    stage('Build & Run on EC2') {
      steps {
        sh '''
          ssh -i /var/lib/jenkins/.ssh/3july.pem -o StrictHostKeyChecking=no ubuntu@98.130.85.211 <<EOF
            cd /home/ubuntu

            docker build -t nginx-i- <<EOD
            FROM nginx:latest
            COPY build/ /usr/share/nginx/html/
            EXPOSE 80
            CMD ["nginx", "-g", "daemon off;"]
            EOD

            docker stop react-c || true
            docker rm react-c || true
            docker run -d --name react-c -p 8086:80 nginx-i
          EOF
        '''
      }
    }
  }
}
